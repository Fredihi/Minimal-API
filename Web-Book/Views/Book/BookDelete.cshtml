@model BookDTO

@{
	ViewData["Title"] = "BookDelete";
}

<div>
	<form asp-action="BookDelete">
		<input asp-for="ID" hidden />
		<div>
			<hr />
			<div class="row">
				<h1 style="color:black;">Delete Book</h1>
				<div class="form-group">
					<label asp-for="Name" class="control-label pt-2" style="font-size:20px; color:black;"></label>
					<input asp-for="Name" disable class="form-control" disabled/>
				</div>

				<div class="form-group">
					<label asp-for="Author" class="control-label pt-2" style="font-size:20px; color:black;"></label>
					<input asp-for="Author" disable class="form-control" disabled/>
				</div>

				<div class="form-group">
					<label asp-for="ReleaseYear" class="control-label pt-2" style="font-size:20px; color:black;"></label>
					<input asp-for="ReleaseYear" disable class="form-control" disabled/>
				</div>

				<div class="form-group">
					<label asp-for="Genre" class="control-label pt-2" style="font-size:20px; color:black;"></label>
					<input asp-for="Genre" disable class="form-control" disabled />
				</div>

				<div class="form-group">
					<label asp-for="Description" class="control-label pt-2" style="font-size:20px; color:black;"></label>
					<textarea asp-for="Description" disable class="form-control" style="height:120px" disabled></textarea>
				</div>

				<div class="col-5" style="margin-top:15px; margin-bottom:15px">
					<input type="submit" value="Delete" class="btn btn-danger" />
				</div>
				<div>
					<a asp-action="BookIndex" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i></a>
				</div>
			</div>
		</div>
	</form>
</div>
