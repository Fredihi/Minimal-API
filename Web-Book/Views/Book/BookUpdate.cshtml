@model BookDTO

@{
	ViewData["Title"] = "BookUpdate";
}

<div class="row">
	<h1>Edit Book</h1>
	<div>
		<form asp-action="BookUpdate">
			<input asp-for="ID" hidden />

			<div class="form-group">
				<label asp-for="Name" class="control-label" style="color:black;"></label>
				<input asp-for="Name" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Author" class="control-label" style="color:black;"></label>
				<input asp-for="Author" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="ReleaseYear" class="control-label" style="color:black;"></label>
				<input asp-for="ReleaseYear" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Genre" class="control-label" style="color:black;"></label>
				<input asp-for="Genre" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Description" class="control-label" style="color:black;"></label>
				<textarea asp-for="Description" class="form-control" style="height:120px" maxlength="150"></textarea>
			</div>

			<div class="form-group" style="margin-top: 15px; margin-bottom:15px;">
				<input type="submit" value="Save" class="btn btn-success"/>
			</div>
		</form>
	</div>
	<div>
		<a asp-action="BookIndex" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i></a>
	</div>
</div>

